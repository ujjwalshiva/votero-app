<html lang="en" data-theme="light">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Votero</title>
  <link rel="stylesheet" href="https://unpkg.com/@picocss/pico@latest/css/pico.min.css" />
  <link rel="stylesheet" href="/css/elections.css" />
</head>

<body>
  <main class="container">
    <div class="topmenu">
      <nav aria-label="breadcrumb">
        <ul>
          <li><a href="/">home</a></li>
          <li><a href="/elections"> elections </a></li>
          <li>
            <a href="/elections/<%=id%>"><%=election.name%></a>
          </li>
        </ul>
      </nav>
    </div>
    <div class="logout">
      <a href="/signout" class="signout">SignOut</a>
    </div>

    <%- include('header.ejs') %>
    <div class="container">
      <h3><%=election.name%>-Registered Voters</h3>

      <ul>
        <% for (let i=0; i < voters.length;i++){%>
        <li>
          <u><%= voters[i].voterName %></u>
        </li>
        <% } %>
      </ul>

      <a href="/elections/<%=id%>/voters/new">Create New Voter</a>
    </div>
  </main>
</body>

</html>